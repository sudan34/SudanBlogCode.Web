@model IEnumerable<SubCategory>

<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6 py-1">
                <h6>SubCategory List</h6>
            </div>
            <div class="col-sm-6 d-flex flex-row align-items-center justify-content-end">
                <a asp-area="Admin" asp-controller="SubCategory" asp-action="Create" class="d-none d-sm-inline btn btn-sm btn-success shadow-sm">
                    <i class="bi bi-plus-square" data-bs-toggle="tooltip" title="Edit" style="font-size:15px"></i> Add New SubCategory
                </a>
            </div>
        </div>

    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sub Category</th>
                <th>Category</th>
                <th>Created Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:5%"> @item.Id</td>
                    <td style="width:50%"> @item.SubCategoryName</td>
                    <td style="width:20%"> @item.Category.CategoryName</td>
                    <td style="width:15%"> @item.CreatedDate.ToLongDateString()</td>
                    <td style="width:10%">
                        @if (item.IsActive)
                        {
                            <span class="text-success">Active</span>
                        }
                        else
                        {
                            <span class="text-warnig">In Active</span>
                        }
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="SubCategory" asp-action="Edit" asp-route-id="@item.Id" class="d-none d-sm-inline btn btn-sm btn-primary shadow-sm">
                                <i class="bi bi-pencil-square" data-bs-toggle="tooltip" title="Edit" style="font-size:15px"></i> Edit
                            </a>
                            <a asp-area="Admin" asp-controller="SubCategory" asp-action="Delete" asp-route-id="@item.Id" class="d-none d-sm-inline btn btn-sm btn-danger shadow-sm">
                                <i class="bi bi-x-square" data-bs-toggle="tooltip" title="Remove" style="font-size:15px"></i> Delete
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
