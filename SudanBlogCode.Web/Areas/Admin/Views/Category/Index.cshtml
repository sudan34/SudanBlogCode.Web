@model IEnumerable<Category>

<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6 py-1">
                <h6>Category List</h6>
            </div>
            <div class="col-sm-6 d-flex flex-row align-items-center justify-content-end">
                <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="d-none d-sm-inline btn btn-sm btn-success shadow-sm">
                    <i class="bi bi-plus-square" data-bs-toggle="tooltip" title="Edit" style="font-size:15px"></i> Add New Category
                </a>
            </div>
        </div>

    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:5%"> @item.Id</td>
                    <td style="width:70%"> @item.CategoryName</td>
                    <td style="width:15%"> @item.CreatedDate.ToLongDateString()</td>
                    <td style="width:10%">@item.IsActive</td>
                    <td>
                        <div class="w-75 btn-group" role="group">

                            <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="d-none d-sm-inline btn btn-sm btn-primary shadow-sm">
                               <i class="bi bi-pencil-square" data-bs-toggle="tooltip" title="Edit" style="font-size:15px"></i> Edit
                            </a>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Delete" class="d-none d-sm-inline btn btn-sm btn-danger shadow-sm">
                                <i class="bi bi-x-square" data-bs-toggle="tooltip" title="Remove" style="font-size:15px"></i> Delete
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>