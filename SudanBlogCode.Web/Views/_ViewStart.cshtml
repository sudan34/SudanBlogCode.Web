@{
    if (this.User.IsInRole("Admin") || this.User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (this.User.IsInRole("Author") || this.User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_LayoutAuthor.cshtml";
    }
    else if (this.User.IsInRole("Subscriber") || this.User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_LayoutSubscriber.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
